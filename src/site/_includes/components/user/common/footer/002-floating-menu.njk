<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/3d-force-graph@1.73.0/dist/3d-force-graph.min.js"></script>
<script src="https://unpkg.com/force-graph@1.43.1/dist/force-graph.min.js"></script>

<script>
(function() {
  const menuToggle = document.getElementById('menu-toggle');
  const menuItems = document.getElementById('menu-items');
  const themeToggle = document.getElementById('theme-toggle');
  const sunIcon = themeToggle.querySelector('.sun-icon');
  const moonIcon = themeToggle.querySelector('.moon-icon');
  const recentPostsBtn = document.getElementById('recent-posts-btn');
  const recentPostsModal = document.getElementById('recent-posts-modal');
  const closeRecentBtn = document.getElementById('close-recent');
  const recentPostsList = document.getElementById('recent-posts-list');
  const graphBtn = document.getElementById('graph-btn');
  const graphModal = document.getElementById('graph-modal');
  const closeGraphBtn = document.getElementById('close-graph');
  let graphInstance = null;
  
  // Menu toggle
  menuToggle.addEventListener('click', function() {
    menuItems.classList.toggle('hidden');
    menuToggle.classList.toggle('active');
  });
  
  // Close menu when clicking outside
  document.addEventListener('click', function(e) {
    if (!e.target.closest('#floating-menu')) {
      menuItems.classList.add('hidden');
      menuToggle.classList.remove('active');
    }
  });
  
  // Theme toggle
  function updateThemeIcon() {
    const isDark = document.documentElement.getAttribute('data-theme') === 'dark' || 
                   document.body.classList.contains('theme-dark');
    if (isDark) {
      sunIcon.style.display = 'none';
      moonIcon.style.display = 'block';
    } else {
      sunIcon.style.display = 'block';
      moonIcon.style.display = 'none';
    }
  }
  
  themeToggle.addEventListener('click', function() {
    const isDark = document.body.classList.contains('theme-dark');
    if (isDark) {
      document.body.classList.remove('theme-dark');
      document.body.classList.add('theme-light');
      localStorage.setItem('theme', 'light');
    } else {
      document.body.classList.remove('theme-light');
      document.body.classList.add('theme-dark');
      localStorage.setItem('theme', 'dark');
    }
    updateThemeIcon();
  });
  
  updateThemeIcon();
  
  // Recent posts modal
  recentPostsBtn.addEventListener('click', function() {
    recentPostsModal.classList.toggle('hidden');
    updateRecentPostsList();
  });
  
  closeRecentBtn.addEventListener('click', function() {
    recentPostsModal.classList.add('hidden');
  });
  
  recentPostsModal.addEventListener('click', function(e) {
    if (e.target === recentPostsModal) {
      recentPostsModal.classList.add('hidden');
    }
  });
  
  // Global graph modal
  let graphMode = '3d'; // default mode

  const graphModeToggle = document.getElementById('graph-mode-toggle');
  if (graphModeToggle) {
    graphModeToggle.addEventListener('click', function() {
      graphMode = (graphMode === '3d') ? '2d' : '3d';
      graphModeToggle.textContent = graphMode === '3d' ? '3D' : '2D';
      // if graph already open, re-init in new mode
      if (!graphModal.classList.contains('hidden')) {
        initializeGraph();
      }
    });
  }

  graphBtn.addEventListener('click', function() {
    graphModal.classList.toggle('hidden');
    if (!graphModal.classList.contains('hidden')) {
      setTimeout(() => initializeGraph(), 100);
    }
  });
  
  closeGraphBtn.addEventListener('click', function() {
    graphModal.classList.add('hidden');
  });
  
  graphModal.addEventListener('click', function(e) {
    if (e.target === graphModal) {
      graphModal.classList.add('hidden');
    }
  });
  
  function initializeGraph() {
    const container = document.getElementById('graph-container');
    const isDark = document.body.classList.contains('theme-dark');

    fetch('/graph.json')
      .then(res => res.json())
      .then(data => {
        if (!data.nodes || data.nodes.length === 0) {
          container.innerHTML = '<p style="text-align:center;padding:2rem;color:#999;">No graph data available</p>';
          return;
        }

        container.innerHTML = '';

        if (graphInstance && graphInstance.pauseAnimation) {
          // cleanup 3d instance
          try { graphInstance.pauseAnimation(); } catch(e) {}
        }

        if (graphMode === '3d') {
          // 3D graph
          const el = document.createElement('div');
          el.style.width = '100%';
          el.style.height = '100%';
          container.appendChild(el);
          const fg = ForceGraph3D()(el)
            .graphData(data)
            .nodeAutoColorBy(d => d.group || 1)
            .nodeRelSize(4)
            .linkOpacity(0.3)
            .linkColor(() => isDark ? '#444' : '#ddd')
            .onNodeClick(node => { if (node.url) window.location.href = node.url; });
          graphInstance = fg;
        } else {
          // 2D graph
          const canvas = document.createElement('div');
          canvas.style.width = '100%';
          canvas.style.height = '100%';
          container.appendChild(canvas);
          const fg2 = ForceGraph()(canvas)
            .graphData(data)
            .nodeAutoColorBy(d => d.group || 1)
            .nodeVal(() => 3)
            .linkOpacity(0.3)
            .linkColor(() => isDark ? '#444' : '#ddd')
            .onNodeClick(node => { if (node.url) window.location.href = node.url; });
          graphInstance = fg2;
        }
      })
      .catch(err => {
        console.error('Error loading graph:', err);
        const container2 = document.getElementById('graph-container');
        if (container2) container2.innerHTML = '<p style="text-align:center;padding:2rem;color:#999;">Unable to load graph data</p>';
      });
  }
  
  function updateRecentPostsList() {
    const recentPosts = JSON.parse(localStorage.getItem('recentPosts') || '[]');
    if (recentPosts.length === 0) {
      recentPostsList.innerHTML = '<p class="empty-message">No recently read posts</p>';
      return;
    }
    
    recentPostsList.innerHTML = recentPosts.map(post => {
      const date = new Date(post.timestamp);
      const timeAgo = getTimeAgo(date);
      return `
        <a href="${post.pathname}" class="recent-post-item">
          <div class="recent-post-title">${escapeHtml(post.title)}</div>
          <div class="recent-post-time">${timeAgo}</div>
        </a>
      `;
    }).join('');
  }
  
  function getTimeAgo(date) {
    const now = new Date();
    const seconds = Math.floor((now - date) / 1000);
    if (seconds < 60) return 'now';
    const minutes = Math.floor(seconds / 60);
    if (minutes < 60) return `${minutes}m ago`;
    const hours = Math.floor(minutes / 60);
    if (hours < 24) return `${hours}h ago`;
    const days = Math.floor(hours / 24);
    return `${days}d ago`;
  }
  
  function escapeHtml(text) {
    const map = {'&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#039;'};
    return text.replace(/[&<>"']/g, m => map[m]);
  }
})();
</script>
